{
    "compilerOptions": {
      "target": "ESNext",                         
      "module": "NodeNext",                         
      "moduleResolution": "NodeNext",                     
      "outDir": "dist",
      "sourceMap": false,                                                              
      "noEmitOnError": true,                           
      "esModuleInterop": true,                           
      "forceConsistentCasingInFileNames": true,         
      "strict": true,                                     
      "noImplicitAny": false,                            
      "strictNullChecks": true,                      
      "skipDefaultLibCheck": true,                    
      "skipLibCheck": true, 
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
    ]
  }
  